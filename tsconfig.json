{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "moduleResolution": "node",
        "module": "ES6",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": ".",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "jsx": "react",
        "typeRoots": [ "node_modules/@types" ],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "@/components/*": ["./src/components/*"],
            "@/src/utils": ["./src/lib/utils"],
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "boldtake-extension/**/*.ts"
    ]
}
